{
  "name": "keszei/phpunit-watcher",
  "type": "library",
  "license": "MIT",
  "description": "Run phpunit project test while file changes",
  "autoload": {
    "psr-4": {
      "Watcher\\": "src/",
      "Tests\\Watcher\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Balazs Keszei",
      "email": "kebalazs95@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.3",
    "ext-json": "*",
    "ext-inotify": "*",
    "symfony/process": "^5.2|^6.0",
    "idimsh/php-inotify-monitor": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "bin": "watch"
}
